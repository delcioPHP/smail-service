{
    "name": "cabanga/smail-service",
    "description": "An email microservice for contact forms || Um micro-serviço de e-mail para formulários de contacto.",
    "type": "project",
    "homepage": "https://github.com/delcioPHP/smail-service",
    "keywords": [
        "php",
        "microservice",
        "contact form",
        "smtp",
        "phpmailer",
        "api"
    ],
    "require": {
        "php": ">=8.1",
        "phpmailer/phpmailer": "^6.10",
        "vlucas/phpdotenv": "^5.6",
        "ezyang/htmlpurifier": "^4.17"
    },
    "autoload": {
        "psr-4": {
            "Cabanga\\Smail\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Delcio Cabanga",
            "email": "delcio_cabanga@hotmail.com",
            "role": "Software Arch"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
